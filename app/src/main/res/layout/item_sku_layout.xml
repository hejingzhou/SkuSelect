<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mRelaAttr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mTvAttrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="颜色"
        android:textColor="#000000"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/mTvSelectType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/mTvAttrName"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/mTvAttrName"
        android:text="(非必选)"
        android:textColor="#d1d1d1"
        android:textSize="13sp" />

    <com.lychee.skuselectdemo.SkuLayout
        android:id="@+id/mSkuViewGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mTvAttrName"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="3dp" />

</RelativeLayout>